<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/window_background"
    tools:context=".CategoriesActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:fontFamily="@font/trajanbold"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/manageCategoriesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage categories"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/trajanbold"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/black"/>

    <!-- RecyclerView takes remaining space -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/answerTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/trajanbold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:id="@+id/play_pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_play"
        android:contentDescription="@string/play_pause_button_desc"
        android:background="@android:color/transparent"
        android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset songs"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/black"
        android:fontFamily="@font/trajanbold"
        android:textSize="24sp"
        android:layout_marginTop="12dp"/>

</LinearLayout>
